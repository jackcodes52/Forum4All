<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <ImageView
            android:layout_width="135dp"
            android:layout_height="114dp"
            android:padding="15dp"
            android:src="@drawable/logo"
            android:layout_gravity="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello and welcome to Forum 4 All"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take a Break Feature:"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There is a 15 minute restriction when you are on the app, a popup will remind you to take a break and it will reset itself. Each time to remind you to take a break"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I truly hope you are enjoying the app. (: Thank you for reading"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DevJack"
            android:textSize="15sp"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</RelativeLayout>