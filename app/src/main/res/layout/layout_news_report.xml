<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    tools:context=".homebuttons.NewsReport"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News Report Page"
            android:textSize="25dp"
            />

        <ImageView
            android:id="@+id/newsimageview"
            android:layout_width="135dp"
            android:layout_height="114dp"
            android:padding="15dp"
            android:src="@drawable/logo"
            android:layout_gravity="end"/>

        <EditText
            android:id="@+id/newsrpttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What is the matter?"
            app:layout_constraintEnd_toStartOf="@+id/newsimageview"
            android:paddingTop="20dp"
            android:maxLength="40"
            />

        <EditText
            android:id="@+id/newsrptdesc"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            android:layout_marginTop="20dp"
            android:hint="Description of the issue"
            android:inputType="textPersonName"
            android:paddingTop="20dp"
            android:maxLength="150"
            app:layout_constraintEnd_toStartOf="@+id/newsimageview" />



        <ImageView
            android:id="@+id/newsrptpost"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_makepost"
            android:layout_gravity="end"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:ignore="MissingConstraints"
        android:layout_centerInParent="true"/>

</RelativeLayout>